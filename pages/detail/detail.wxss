.header{
    height:224rpx;
    background:url("https://s.kcimg.cn/app/images/matching/truck-1.jpg") no-repeat 0 0;
    background-size: contain;
    color:#fff;
    overflow: hidden;
    text-align: center;
}
.distance{
    position: relative;
    margin-top:41rpx;
    min-height: 84rpx;
    overflow: hidden;
}
.distance .start,.distance .end{
    position: absolute;
    top:0;
    width: 280rpx;
}
.distance .start{
    left:10rpx;
}
.distance .end{
    right:10rpx;
}

.distance .city{
    display:block;
    font-size: 36rpx;
    line-height: 36rpx;
}
.distance .province{
    margin-top: 21rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    color:rgba(255,255,255,.8);
    display: block;
}

.mileage{
    position: absolute;
    left:50%;
    top:52rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    transform: translate(-50%,0);
}

.receipt{
    margin-top: 40rpx;
    font-size: 36rpx;
    line-height: 36rpx;
    display: block;
}

.module{
    margin-top: 20rpx;
    background: #fff
}

.address-info{
    padding-left: 30rpx;
}
.address-info .grid{
    position: relative;
    padding:30rpx 80rpx 30rpx 0;
    min-height:70rpx;
    border-top:1rpx solid #e5e5e5
}
.address-info .grid:first-of-type{
    border:0 none;
}
.address-info caption{
    font-size: 24rpx;
    line-height: 24rpx;
    color:#999;
    display: block;
}
.address-info .content{
    margin-top:10rpx;
    font-size: 32rpx;
    line-height: 32rpx;
    display: block
}
.address-info .region{
    position: absolute;
    right:30rpx;
    top:32rpx;
    color:#09BB07;
    text-align: center;
}
.address-info .region:before{
    margin:0 auto;
    width:28rpx;
    height:28rpx;
    content:"";
    display: block;
    background: url("https://s.kcimg.cn/app/images/matching/locate.png") no-repeat;
    background-size: 100% 100%;
}

.source-info{
    display: flex;
    height:126rpx;
}
.source-info .cell{
    position: relative;
    padding:30rpx;
    flex:1;
    box-sizing: border-box
}
.source-info .cell:after{
    position: absolute;
    top:39rpx;
    right:0;
    content:"";
    width:0;
    height:48rpx;
    border-right:1rpx solid #dbdbdb;
}
.source-info caption,.other caption{
    font-size: 24rpx;
    line-height: 24rpx;
    color:#999;
}
.source-info text{
    margin-top: 10rpx;
    font-size: 32rpx;
    line-height: 32rpx;
    display: block;
}
.other,.footer{
    padding: 30rpx;
}
.other .content{
    margin-top: 2rpx;
    font-size: 32rpx;
    line-height: 48rpx;
}

.footer button{
    font-size: 32rpx;
}
.tel:before,.favorite:before{
    margin-right: 12rpx;
    content:"";
    display: inline-block;
    vertical-align: middle;
    background-size: 100% 100%;
}
.tel:before{
    width:24rpx;
    height:28rpx;
    background-image: url("https://s.kcimg.cn/app/images/matching/phone.png");
}
.favorite{
    margin-top: 30rpx;
}

.favorite:before{
    width:28rpx;
    height:28rpx;
    background-image: url("https://s.kcimg.cn/app/images/matching/collect.png");

}
